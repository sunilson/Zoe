<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/widget_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vehicle_widget_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:theme="@style/Base.Theme.Zoe.AppTheme">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/vehicle_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_baseline_settings_24" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/vehicle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textColor="@color/white"
                    tools:text="Zoe" />

            <TextView
                    android:id="@+id/vehicle_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="@color/white"
                    tools:text="20% (300km)" />

            <TextView
                    android:id="@+id/vehicle_charging_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="@color/white"
                    tools:text="Nicht am Laden" />

            <TextView
                    android:id="@+id/vehicle_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="@color/white"
                    tools:text="Kilometerstand: 25000 km" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/vehicle_widget_background"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/start_hvac"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_baseline_whatshot_24" />

        <ImageButton
                android:id="@+id/show_vehicle_location"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_baseline_map_24" />

        <ImageButton
                android:id="@+id/show_charge_statistics"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_baseline_trending_up_24" />
    </LinearLayout>

</LinearLayout>