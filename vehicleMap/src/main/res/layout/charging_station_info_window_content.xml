<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorSurface"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
            android:id="@+id/name"
            style="?textAppearanceHeadline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Vorarlberger" />

    <TextView
            android:id="@+id/free_spaces"
            style="?textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Freie Plätze: 12" />

    <TextView
            style="?textAppearanceSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/address"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/address"
            style="?textAppearanceBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="In der Bündt 5 \n 6837 Weiler \n Österreich" />

    <TextView
            style="?textAppearanceSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/connections"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/connections"
            style="?textAppearanceBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="\u2022 operator contract \n\u2022 credit card" />

</LinearLayout>