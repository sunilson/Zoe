<resources>

    <style name="Widget.App.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_height">40dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_stroke_color</item>
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="SelectableImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="BackButton" parent="SelectableImageButton">
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>/>
    </style>

    <style name="RightToolbarButton" parent="SelectableImageButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginVertical">12dp</item>
    </style>


    <style name="WidgetCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.App.CircularProgressBar" parent="CircularProgressBar">
        <item name="backgroundStrokeColor">@color/dark_gray</item>
        <item name="strokeColor">?colorOnPrimary</item>
        <item name="backgroundStrokeWidth">25</item>
        <item name="foregroundStrokeWidth">25</item>
    </style>

    <style name="Widget.App.Text.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Text.Body1" parent="TextAppearance.MaterialComponents.Body1"></style>

    <style name="Widget.App.Text.Body2" parent="TextAppearance.MaterialComponents.Body2"></style>

    <style name="Widget.App.Text.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1"></style>

    <style name="Widget.App.Text.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>
</resources>