<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="circularProgressBarStyle" format="reference" />

    <attr name="defaultBackground" format="color" />
    <attr name="alternativeBackground" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorSecondary" format="color" />
    <attr name="textColorPrimaryInverted" format="color" />
    <attr name="textColorSecondaryInverted" format="color" />

    <declare-styleable name="DiagonalCutView">
        <attr name="direction" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="offset" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ArcView">
        <attr name="arcHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CircularProgressBar">
        <attr name="foregroundStrokeWidth" format="float" />
        <attr name="backgroundStrokeWidth" format="float" />
        <attr name="strokeColor" format="color" />
        <attr name="backgroundStrokeColor" format="color" />
        <attr name="progress" format="float" />
        <attr name="hasBackgroundRing" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CurtainView">
        <attr name="color" />
        <attr name="curtainRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BigToggle">
        <attr name="textLeft" format="string" />
        <attr name="textRight" format="string" />
    </declare-styleable>
</resources>