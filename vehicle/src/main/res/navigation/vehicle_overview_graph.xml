<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/vehicle_overview_graph"
        app:startDestination="@id/vehicleOverviewFragment">
    <fragment
            android:id="@+id/vehicleOverviewFragment"
            android:name="at.sunilson.vehicle.presentation.vehicleOverview.VehicleOverviewFragment"
            android:label="VehicleOverviewFragment"
            tools:layout="@layout/fragment_vehicle_overview">

        <deepLink app:uri="zoe://vehicle_overview" />
        <deepLink app:uri="zoe://vehicle_overview/start_hvac" />
        <deepLink app:uri="zoe://vehicle_overview/charge_statistics" />
        <deepLink app:uri="zoe://vehicle_overview/vehicle_location" />

        <action
                android:id="@+id/show_settings_dialog"
                app:destination="@id/settingsDialogFragment" />

        <action
                android:id="@+id/show_vehicle_details"
                app:destination="@id/vehicleDetailsFragment"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"
                app:popEnterAnim="@anim/fragment_fade_enter"
                app:popExitAnim="@anim/fragment_fade_exit" />
        <action
                android:id="@+id/show_vehicle_location"
                app:destination="@id/vehicleMapFragment" />
        <action
                android:id="@+id/show_charge_statistics"
                app:destination="@id/charge_statistics_graph"
                app:enterAnim="@anim/move_in_from_right"
                app:exitAnim="@anim/move_out_to_left_slightly"
                app:popEnterAnim="@anim/move_in_from_left_slightly"
                app:popExitAnim="@anim/move_out_to_right">
            <argument
                    android:name="vin"
                    app:argType="string"
                    app:nullable="false" />
        </action>
        <!--
             app:popEnterAnim="@anim/move_in_from_left_slightly"
             app:popExitAnim="@anim/move_out_to_right"
             -->
    </fragment>

    <dialog
            android:id="@+id/settingsDialogFragment"
            android:name="at.sunilson.vehicle.presentation.settingsDialog.SettingsDialogFragment"
            android:label="SettingsDialogFragment"
            tools:layout="@layout/dialog_fragment_settings">
        <action
                android:id="@+id/reload"
                app:destination="@id/vehicleOverviewFragment"
                app:popUpTo="@id/vehicleOverviewFragment"
                app:popUpToInclusive="true" />
    </dialog>

    <fragment
            android:id="@+id/vehicleDetailsFragment"
            android:name="at.sunilson.vehicle.presentation.vehicleDetails.VehicleDetailsFragment"
            android:label="VehicleDetailsFragment"
            tools:layout="@layout/fragment_vehicle_details">
        <argument
                android:name="vin"
                app:argType="string" />
        <argument
                android:name="smallTransition"
                app:argType="boolean" />
    </fragment>

    <fragment
            android:id="@+id/vehicleMapFragment"
            android:name="at.sunilson.vehicle.presentation.vehicleMap.VehicleMapFragment"
            android:label="VehicleMapFragment"
            tools:layout="@layout/fragment_vehicle_map">

        <deepLink app:uri="zoe://vehicle_location/{vin}" />

        <argument
                android:name="vin"
                app:argType="string" />
    </fragment>

    <include app:graph="@navigation/charge_statistics_graph" />

</navigation>